---
interface Props {
  href?: string
  target?: astroHTML.JSX.HTMLAttributeAnchorTarget | undefined | null
  class?: string
}

const { href = '#', target, class: className } = Astro.props
---

<a
  class:list={[
    'flex w-fit border px-8 py-3.5 font-medium duration-150 hover:bg-primary hover:text-white',
    className
  ]}
  href={href}
  target={target}
>
  <slot />
</a>
